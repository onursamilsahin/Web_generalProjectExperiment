@model Web_generalProjectExperiment.Models.Employees
@{
    ViewBag.Title = "GuncelleSayfasi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 <div class="col-md-6">

    <div class="container">
        <h2>Horizontal form</h2>
        <input name="EmployeeID" hidden />
        <div class="form-group">
            <label class="control-label col-sm-2" for="email">Soyisim:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="LastName" placeholder="Enter email" value="@Model.LastName" name="LastName">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="pwd">İsim:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="FirstName" placeholder="Enter password"value="@Model.FirstName" name="FirstName">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="pwd">Başlık:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="Title" placeholder="Enter password" value="@Model.Title" name="Title">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="pwd">Doğum tarihi:</label>
            <div class="col-sm-10">
                <input type="date" class="form-control" id="BirthDate" placeholder="Enter password" value="@Model.BirthDate" name="BirthDate">
            </div>
        </div>



        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="button" onclick="VeriGuncelle(@Model.EmployeeID)" class="btn btn-default">Kaydet</button>
            </div>
        </div>

    </div>

</div>

<script>

    function VeriGuncelle(id) {
        var Data = {

            "EmployeeID": id,
